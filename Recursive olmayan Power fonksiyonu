#include <cstdlib>
#include <iostream>

using namespace std;

int Pow (int a, int b)
{
    int sonuc = 1;
    int sayac = 0; 
    int i = 0; 
    for (i=0; i<b; i++){ 
        sonuc = sonuc*a;
        sayac = sayac +1; 
    } 
    printf("sonuc = %d \n", sonuc);
    printf("döngü sayisi: %d \n", sayac);
}

int main(int argc, char *argv[])
{
    int a; 
    int b; 
    printf("taban: ");
    scanf("%d",&a);
    printf("us: ");
    scanf("%d",&b);
    
    Pow(a,b);
    
    system("PAUSE");
    return EXIT_SUCCESS;
}
